      <ul>
        <% @book_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
     </ul>
   <% end %>

    <h2>New Book</h2>
    <%= form_with model:@book_new, local:true do |f| %>
    <div>
     <label for="book_title">Title</label>
     <%= f.text_field :title %>
    </div>

    <div>
    <label for="book/body">Body</label>
    <%= f.text_area :body %>
    </div>

    <div>
    <%= f.submit 'Create Book' %>
    </div>
   <% end %>
